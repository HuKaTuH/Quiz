<AnchorPane fx:id="signupForm" prefHeight="420.0" prefWidth="480.0" stylesheets="@Signup.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Signup.SignupController">
   <children>
      <Label fx:id="signupLogo" layoutX="173.0" layoutY="29.0" text="Sign Up" textFill="#00f3b6">
         <font>
            <Font name="Arial" size="38.0" />
         </font>
      </Label>
      <Label layoutX="95.0" layoutY="88.0" prefHeight="26.0" prefWidth="79.0" text="Username">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="5.0" right="5.0" top="5.0" />
         </padding>
         <font>
            <Font name="Helvetica" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="userNameField" layoutX="95.0" layoutY="114.0" prefHeight="27.0" prefWidth="290.0" promptText="Enter your username">
         <font>
            <Font name="Helvetica" size="13.0" />
         </font>
      </TextField>
      <Label fx:id="ErrorField" alignment="CENTER" layoutX="82.0" layoutY="381.0" prefHeight="17.0" prefWidth="318.0" textFill="RED" />
      <Label layoutX="95.0" layoutY="144.0" prefHeight="26.0" prefWidth="79.0" text="Email">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="5.0" right="5.0" top="5.0" />
         </padding>
         <font>
            <Font name="Helvetica" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="emailField" layoutX="95.0" layoutY="170.0" prefHeight="26.0" prefWidth="290.0" promptText="Example@gmail.com" />
      <PasswordField fx:id="passwordField" layoutX="95.0" layoutY="228.0" prefHeight="27.0" prefWidth="290.0" promptText="Enter your password" />
      <Label layoutX="95.0" layoutY="200.0" prefHeight="28.0" prefWidth="70.0" text="Password">
         <padding>
            <Insets bottom="5.0" right="5.0" top="5.0" />
         </padding>
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label layoutX="95.0" layoutY="258.0" prefHeight="28.0" prefWidth="125.0" text="Confirm Password">
         <padding>
            <Insets bottom="5.0" right="5.0" top="5.0" />
         </padding>
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <PasswordField fx:id="confirmPasswordField" layoutX="95.0" layoutY="286.0" prefHeight="27.0" prefWidth="290.0" promptText="Enter your password" />
      <Button fx:id="signupButton" alignment="CENTER" ellipsisString="" layoutX="121.0" layoutY="338.0" mnemonicParsing="false" onMouseClicked="#signupAction" prefHeight="26.0" prefWidth="239.0" text="SIGNUP" textFill="WHITE">
         <font>
            <Font name="Arial Bold" size="14.0" />
         </font>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </Button>
   </children>
</AnchorPane>
